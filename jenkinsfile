pipeline {
    agent any

    tools {
        maven "3.6.3"
    }

    stages {
        stage("Build") {
            steps {
                sh "mvn -version"
                sh "mvn clean install"
            }
        }
        stage("Deploy ap to vm"){
             steps{
                ansiblePlaybook(
                                    credentialsId:'/Users/caglar/.ssh/caglar_test_key.pem',
                                    inventory: 'ansible/inventory-file',
                                    playbook: 'ansible/playbook.yml'
                                )
             }
        }
    }
}