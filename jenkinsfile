pipeline {
    agent any

    tools {
        maven "3.6.3"
    }

    stages {
        stage("Build") {
            steps {
                sh "mvn -version"
                sh "mvn clean install"
            }
        }
        stage("Deploy ap to vm"){
             steps{
                ansiblePlaybook(
                                    inventory: '/Users/caglar/Documents/spring-boot-hello/ansible/inventory-file',
                                    playbook: '/Users/caglar/Documents/spring-boot-hello/ansible/playbook.yml'
                                )
             }
        }
    }
}